<my-scene 
disable-scroll
    id="main-frame"
    width="{{width}}"
    height="{{height}}"
    style="width:100%;height:100%;display:block;" id="xr-scene" bind:ready="handleReady">
  <my-assets bind:progress="handleAssetsProgress" bind:loaded="handleAssetsLoaded">
    <my-asset-load type="gltf" asset-id="gltf-toon" src="https://mmbizwxaminiprogram-1258344707.cos.ap-guangzhou.myqcloud.com/xr-frame/demo/damage-helmet/index.gltf" />
  </my-assets>
  <my-node>
    <my-node node-id="camera-target" position="0 0 0"></my-node>
    <my-mesh node-id="floor-plane" position="0 -2 0" rotation="0 0 0" scale="10 1 10" geometry="plane"
      uniforms="u_baseColorFactor:1 1 1 1" receive-shadow
    ></my-mesh>
    <my-gltf id="gltf" position="0 0 0" scale="2 2 2" model="gltf-toon" cast-shadow></my-gltf>

    <my-camera
      id="camera" node-id="camera" position="2 2 4" clear-color="0.96 0.96 0.96 1"
      target="camera-target" near="0.1" far="2000"
      camera-orbit-control=""
    ></my-camera>
  </my-node>
  <my-node node-id="lights">
    <my-light type="ambient" color="1 1 1" intensity="1.2" />
    <my-light type="directional" rotation="120 20 0" color="1 1 1" intensity="2" cast-shadow />
  </my-node>
</my-scene>