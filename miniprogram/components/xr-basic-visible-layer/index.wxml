<my-scene 
disable-scroll
    id="main-frame"
    width="{{width}}"
    height="{{height}}"
    style="width:100%;height:100%;display:block;" id="xr-scene" bind:ready="handleReady">
  <my-assets bind:progress="handleAssetsProgress" bind:loaded="handleAssetsLoaded">
    <my-asset-material asset-id="standard-mat" effect="standard" />
  </my-assets>
  <my-node node-id="camera-target" position="0 1.25 -5"></my-node>
  <my-node visible="{{visibleIndex === 1}}">
    <my-mesh node-id="mesh-plane" position="0 -0.05 -4" rotation="0 0 0" scale="5 1 5" geometry="plane" material="standard-mat" uniforms="u_baseColorFactor:0.48 0.78 0.64 1"></my-mesh>
  </my-node>
  <my-node visible="{{visibleIndex === 2}}">
    <my-mesh id="cube" node-id="mesh-cube" position="-1 0.5 -3.5" scale="1 1 1" rotation="0 45 0" geometry="cube" material="standard-mat" uniforms="u_baseColorFactor:0.298 0.764 0.85 1"></my-mesh>
  </my-node>
  <my-node layer="1">
    <my-mesh node-id="mesh-sphere" position="0 1.25 -5" scale="1.25 1.25 1.25" geometry="sphere" material="standard-mat" uniforms="u_baseColorFactor:0.937 0.176 0.368 1"></my-mesh>
    <my-node layer="2">
      <my-mesh node-id="mesh-cylinder" position="1 0.7 -3.5" scale="1 0.7 1" geometry="cylinder" material="standard-mat" uniforms="u_baseColorFactor:1 0.776 0.364 1"></my-mesh>
    </my-node>
  </my-node>
  <my-camera
    id="camera" node-id="camera" position="0 1.6 0" clear-color="0.925 0.925 0.925 1"
    target="camera-target" cull-mask="{{cullMask}}"
    camera-orbit-control=""
  ></my-camera>
  <my-node node-id="lights">
    <my-light type="ambient" color="1 1 1" intensity="1" />
    <my-light type="directional" rotation="40 170 0" color="1 1 1" intensity="3" />
  </my-node>
</my-scene>