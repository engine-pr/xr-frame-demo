<my-scene 
disable-scroll
    id="main-frame"
    width="{{width}}"
    height="{{height}}"
    style="width:100%;height:100%;display:block;" id="xr-scene" bind:ready="handleReady"   bind:assetsLoaded="handleLoaded">
  <my-assets bind:loaded="handleAssetsLoaded">
    <my-asset-load type="texture" asset-id="glow_circle" src="https://mmbizwxaminiprogram-1258344707.cos.ap-guangzhou.myqcloud.com/xr-frame/demo/particles/glow_circle.png" />
    <my-asset-load type="gltf" asset-id="gltf-ballon" src="https://webar.hereto.cn/asset/fe/ast-show/ballon-anim.glb" /> 
  </my-assets>

  <my-node>
    <my-mesh node-id="mesh-plane" position="0 -1 0" rotation="0 0 0" scale="5 0.2 5"
      geometry="cube" material="blue-mat" uniforms="u_baseColorFactor:0.48 0.78 0.64 1"
    ></my-mesh>
    <my-env sky-map="sky" is-sky2d/>

    <!-- <xr-custom-particle  id="magicField" position="0 0 0" rotation="0 0 180" capacity="10" speed="0.1" size="2" emit-rate="6" life-time="0.5" angle="0"  render-mode="mesh" mesh="specialCylinder" texture="glow_circle" angular-speed="0"></xr-custom-particle> -->

    <xr-custom-particle  id="magicField" position="0 0 0" rotation="0 0 0" capacity="10" speed="0.1" size="0.02" emit-rate="6" life-time="0.5" angle="0"  texture="glow_circle" angular-speed="0" render-model="gltf-ballon"></xr-custom-particle>

    <my-gltf id="ballon" node-id="gltf-ballon" position="0.8 0 0" rotation="0 0 0" scale="1.2 1.2 1.2" model="gltf-ballon"></my-gltf>

    <my-camera
      id="camera" node-id="camera" position="0 6 -6" clear-color="0.1 0.1 0.1 1"
      target="mesh-plane" background="skybox"
      camera-orbit-control=""
    ></my-camera>
    
  </my-node>
  <my-node node-id="lights">
    <my-light type="ambient" color="1 1 1" intensity="0.3" />
    <my-light type="directional" rotation="90 0 0" color="1 1 1" intensity="2.5"  />
  </my-node>

</my-scene>