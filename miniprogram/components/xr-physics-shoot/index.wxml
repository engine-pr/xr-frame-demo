<my-scene 
disable-scroll
    id="main-frame"
    width="{{width}}"
    height="{{height}}"
    style="width:100%;height:100%;display:block;" id="xr-scene" bind:ready="handleReady" ar-system="modes:Marker;camera:Back">
  <my-assets bind:progress="handleAssetsProgress" bind:loaded="handleAssetsLoaded">
    <my-asset-material asset-id="standard-mat" effect="standard" />
    <my-asset-load type="raw" asset-id="logo" src="/assets/wx_logo.bmp.bin"></my-asset-load>
  </my-assets>
  <my-physics></my-physics>
  <my-node>
    <my-ar-tracker id="arTracker" mode="Marker" src="/components/xr-physics-shoot/weixin.png" bind:ar-tracker-state="handleARTrackerState">
    <my-node></my-node>
    </my-ar-tracker>
    <my-node layer="1">
      <my-shadow id="bricksRoot" node-id="bricksRoot"></my-shadow>
    </my-node>
    <my-camera
      id="camera2" node-id="camera2" clear-color="0.925 0.925 0.925 1" position="0 0 5"
      background="ar" is-ar-camera cull-mask="1"
    ></my-camera>
    <my-camera
      id="camera" node-id="camera" position="1 2 4" is-clear-color="false" target="bricksRoot"
    ></my-camera>
  </my-node>
  <my-node node-id="lights">
    <my-light type="ambient" color="1 1 1" intensity="1" />
    <my-light type="directional" rotation="180 0 0" color="1 1 1" intensity="3" />
  </my-node>
</my-scene>