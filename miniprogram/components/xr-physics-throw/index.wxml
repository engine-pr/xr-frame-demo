<my-scene 
disable-scroll
    id="main-frame"
    width="{{width}}"
    height="{{height}}"
    style="width:100%;height:100%;display:block;" id="xr-scene" bind:ready="handleReady" bind:tick="handleTick" ar-system="modes:Plane;camera:Back">
  <my-assets bind:progress="handleAssetsProgress" bind:loaded="handleAssetsLoaded">
    <my-asset-load type="gltf" asset-id="anchor" src="https://mmbizwxaminiprogram-1258344707.cos.ap-guangzhou.myqcloud.com/xr-frame/demo/ar-plane-marker.glb" />
    <my-asset-load type="gltf" asset-id="basket" src="https://mmbizwxaminiprogram-1258344707.cos.ap-guangzhou.myqcloud.com/xr-frame/demo/laundry_basket/scene.gltf" />
    <my-asset-material asset-id="standard-mat" effect="standard" />
  </my-assets>
  <my-physics></my-physics>
  <my-node>
    <my-ar-tracker mode="Plane" bind:ar-tracker-state="handleARTrackerState">
      <my-gltf model="anchor" wx:if="{{!showTarget}}"></my-gltf>
    </my-ar-tracker>
    <my-node node-id="targetTransform">
      <my-node id="targetRoot" wx:if="{{showTarget}}">
        <my-node scale="0.2 0.2 0.2" position="0 -0.3 0">
          <my-gltf model="basket"></my-gltf>
          <my-node cube-shape="size: 0.01 3 2" position="-1.3 0 0" shape-interact="collide: true"></my-node>
          <my-node cube-shape="size: 0.01 3 2" position="1.3 0 0" shape-interact="collide: true"></my-node>
          <my-node cube-shape="size: 2.3 3 0.01" position="0 0 -1" shape-interact="collide: true"></my-node>
          <my-node cube-shape="size: 2.3 3 0.01" position="0 0 1" shape-interact="collide: true"></my-node>
        </my-node>
        <my-node cube-shape="size: 10 0.001 10" position="0 -0.3 0" shape-interact="collide: true"></my-node>
      </my-node>
    </my-node>
    <my-camera
      id="camera" node-id="camera" clear-color="0.925 0.925 0.925 1" position="0 0 50" 
      background="ar" is-ar-camera
    >
    </my-camera>
    <my-shadow id="ballRoot" node-id="ballRoot"></my-shadow>
  </my-node>
  <my-node node-id="lights">
    <my-light type="ambient" color="1 1 1" intensity="1" />
    <my-light type="directional" rotation="180 0 0" color="1 1 1" intensity="3" />
  </my-node>
</my-scene>